
<%- include('../partials/head'); -%>
    
<div class="drawer md:drawer-open " class="-z-[200] bg-base-300">
    <input id="admin-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content bg-base-200  px-5 pb-5 pt-2 min-h-screen">
      <div class="navbar p-0 gap-2   mb-1  ">
       
        <div class="flex-1 flex items-center gap-2">
          
         
          <div class=" grid">
            <div class="flex items-center">
              <div class="flex-none lg:hidden ">
                <label for="admin-drawer" class=" btn  btn-square btn-ghost  ">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
                    </svg>
                </label>
              
              </div>
              <h1 class=" font-extrabold text-2xl  leading-none capitalize"><%= admin.page.title %></h1>
            </div>
            <div class="breadcrumbs leading-none text-xs overflow-x-auto w-full">
              <ul>
                <% for(let i = 0;i < admin.page.path.length -1;i++){ %>
                  <li><%= admin.page.path[i] %></li>
                <% } %>
                <li><span class="badge badge-ghost badge-sm bg-base-300"><%= admin.page.path[admin.page.path.length-1]%></span></li>
              </ul>
            </div>
          </div>
        </div>
          
      </div>
  
      <%- include(content); -%>
    </div>
    <div class="drawer-side     ">
      <label for="admin-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
      <div class="  sticky top-0  bg-base-100   w-screen max-w-72 min-h-screen border-r border-r-base-300">
       
        <div class="p-6 border-b border-b-base-300">
          <div class="flex flex-col items-center  gap-2 ">
              <div class="flex justify-center  w-full">
                  <div class="mask mask-squircle aspect-square w-full  max-w-24">
                      <img
                      src="<%= user.picture  %>"
                      alt="account profile" />
                  </div>
                  
              </div>
              <div class="flex items-center  flex-col max-h-fit">
                <span class="text-xl font-extrabold"><%= user.name %></span> 
                <span class="text-sm opacity-50 truncate text-ellipsis"><%= user.email %></span>
              
                <span
                    <% if(user.isAdmin){ %>
                        class="badge badge-sm badge-success">admin
                    <% }else{ %>
                        class="badge badge-sm badge-ghost">visitor
                    <% } %>
                    
                    <%= ' : ' + (user.roleName || 'no role') %>

                </span>
              </div>
              <div class="flex gap-2 ">
                <a href="/" class="btn btn-sm btn-square btn-ghost">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                  </svg>
                </a>
                <label class="swap swap-rotate btn btn-square btn-sm btn-ghost " >
                  <!-- this hidden checkbox controls the state -->
                  <input type="checkbox"  />
                
                  <!-- sun icon -->
                  <svg
                    data-toggle-theme="light" data-act-class="ACTIVECLASS"
                    class="swap-on h-6 w-6 fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24">
                    <path
                      d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z" />
                  </svg>
                
                  <!-- moon icon -->
                  <svg
                  
                    data-toggle-theme="dark" data-act-class="ACTIVECLASS"
                    class="swap-off h-6 w-6 fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24">
                    <path
                      d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
                  </svg>
                </label>
              </div>
          </div>
        
        </div>
      
        <ul class="menu p-2  w-full  ">
         
          <li class="">
            <a href="/admin/dashboard" class="">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 ">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z" />
              </svg>
              
              Dashboard                      
            </a>
          </li>
          <li >
            <details open>
              <summary>  
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 ">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                </svg>
                
                Account management 
